<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference
		android:key="vibration_setting"
		android:title="@string/settings_vibration_option"
		android:defaultValue="true"
		/>
	<RingtonePreference
		android:key="ringtone_setting"
		android:title="@string/settings_ringtone_option"
		android:showSilent="true"
		android:showDefault="true"
		android:ringtoneType="ringtone|alarm"
		/>
	<CheckBoxPreference
		android:key="snap_setting"
		android:title="@string/settings_snap_option"
		android:defaultValue="true"
		/>
	<CheckBoxPreference
		android:key="ramping_setting"
		android:title="@string/settings_volume_increase_option"
		android:defaultValue="true"
		/>
	<ListPreference
		android:key="theme_setting"
		android:title="@string/settings_theme_option"
		android:defaultValue="0"
		android:entries="@array/settings_themes"
		android:entryValues="@array/settings_themes_values"
		/>
</PreferenceScreen>
